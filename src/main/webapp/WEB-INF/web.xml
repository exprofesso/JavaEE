<web-app id="WebApp_ID" version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
   http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>500</error-code>
        <location>/500</location>
    </error-page>

    <listener>
        <listener-class>evilNerd.listener.CustomContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>evilNerd.controller.FrontController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/FrontController</url-pattern>
    </servlet-mapping>

<!--    localhost:8080/application/FrontController-->

    <servlet>
        <servlet-name>HelloWeb</servlet-name>
        <jsp-file>/WEB-INF/jsp/hello.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>ByeByeWeb</servlet-name>
        <jsp-file>/WEB-INF/jsp/bye.jsp</jsp-file>
    </servlet>
    
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/WEB-INF/jsp/index.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>main</servlet-name>
        <jsp-file>/WEB-INF/jsp/main.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>500</servlet-name>
        <jsp-file>/WEB-INF/errors/500.jsp</jsp-file>
    </servlet>
    
    <servlet>
        <servlet-name>tablecars</servlet-name>
        <jsp-file>/WEB-INF/jsp/tablecars.jsp</jsp-file>
    </servlet>
    


    
    

    <servlet-mapping>
        <servlet-name>tablecars</servlet-name>
        <url-pattern>/tablecars</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>500</servlet-name>
        <url-pattern>/500</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HelloWeb</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <!--    localhost:8080/application/hello-->

    <servlet-mapping>
        <servlet-name>ByeByeWeb</servlet-name>
        <url-pattern>/bye.jsp</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index.jsp</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HelloWeb</servlet-name>
        <url-pattern>/hello.jsp</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>evilNerd.filter.CharsetFilter</filter-class>
    </filter>

    <filter>
        <filter-name>AuthHeaderFilter</filter-name>
        <filter-class>evilNerd.filter.AuthHeaderFilter</filter-class>
    </filter>

    <!--<filter>
        <filter-name>LanguageFilter</filter-name>
        <filter-class>evilNerd.filter.LanguageFilter</filter-class>
    </filter>-->


    <!--    Ordering in filter mapping defines which filter should be invoked firstly-->
    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthHeaderFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--<filter-mapping>
        <filter-name>LanguageFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>-->

    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>



</web-app>

        <!--Tomcat -> webapp -> myapp.war -> myapp ->-->
        <!--META-INF-->
        <!--WEB-INF (закрытый доступ, напрямую не вытянуть) -> web.xml -> localhost:8080/myapp/hello-->
        <!--index.html || index.jsp-->

        <!--Serlet = class that operate with http-->
        <!--Servlet = java class || jsp (.jsp -> .java -> .class -> executing)-->